<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{ .Title }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/retro-sci-fi.css?v=10">
    <link rel="icon" href="/favicon.ico?v=1" sizes="any">
    <link rel="icon" type="image/png" href="/favicon-32x32.png?v=1" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png?v=1" sizes="16x16">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png?v=1" sizes="180x180">
    <link rel="manifest" href="/site.webmanifest?v=1">
    <meta name="theme-color" content="#0a0e1a">
</head>
<body>
  <div class="wrap">
    <div class="crt">
      <header>
        <h1>{{ .Title }}</h1>
        {{- if .Subtitle }}<p class="byline">{{ .Subtitle }}</p>{{ end }}
      </header>
      <div class="rule" aria-hidden="true"></div>
      <article>
        {{- if .Items }}
        <ul>
          {{- range .Items }}
          <li><time datetime="{{ .ISODate }}">{{ .HumanDate }}</time> Â· <a href="{{ .URL }}">{{ .Title }}</a></li>
          {{- end }}
        </ul>
        {{- else }}
        <p>No notes yet.</p>
        {{- end }}
      </article>

      {{- if or .PrevURL .NextURL }}
      <nav class="pagination" aria-label="Pagination">
        {{- if .PrevURL }}
        <a href="{{ .PrevURL }}" class="prev-page">&larr; Newer</a>
        {{- end }}
        <span class="page-info">Page {{ .CurrentPage }} of {{ .TotalPages }}</span>
        {{- if .NextURL }}
        <a href="{{ .NextURL }}" class="next-page">Older &rarr;</a>
        {{- end }}
      </nav>
      {{- end }}

      <footer>
        <a href="/">Home</a>
      </footer>
    </div>
  </div>
</body>
</html>
