        {{- if .Subtitle }}<p class="byline">{{ .Subtitle }}</p>{{ end }}
      </header>
      <div class="rule" aria-hidden="true"></div>
      <article>
        <ul>
          {{- range .Items }}
          <li><time datetime="{{ .ISODate }}">{{ .HumanDate }}</time> Â· <a href="{{ .URL }}">{{ .Title }}</a></li>
          {{- end }}
        </ul>
      </article>
      <footer>
        <a href="/">Home</a>
      </footer>
    </div>
  </div>
</body>
</html>
