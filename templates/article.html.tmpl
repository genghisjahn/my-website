<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{ .Title }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {{- if .CanonicalURL }}<link rel="canonical" href="{{ .CanonicalURL }}">{{ end -}}
  
    <link rel="alternate" type="application/rss+xml" title="Posts" href="/feed.xml">
    <link rel="alternate" type="application/rss+xml" title="Notes" href="/notes/feed.xml">
    <link rel="webmention" href="https://webmention.io/jonwear.com/webmention">
    <link rel="pingback" href="https://webmention.io/jonwear.com/xmlrpc">
    <link rel="stylesheet" href="/css/retro-sci-fi.css?v=13">
    <link rel="icon" href="/favicon.ico?v=2" sizes="any">
    <link rel="icon" type="image/png" href="/favicon-32x32.png?v=2" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png?v=2" sizes="16x16">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png?v=2" sizes="180x180">
    <link rel="manifest" href="/site.webmanifest?v=2">
    <meta name="theme-color" content="#0a0e1a">

</head>
<body>
  <div class="wrap">
    <div class="crt">
      <article class="h-entry">
      <header>
        <h1 class="p-name">{{ .Title }}</h1>
        <p class="byline">By <span class="p-author">{{ .Author.Name }}</span> · <time class="dt-published" datetime="{{ .Date }}">{{ .DateHuman }}</time></p>
      </header>

      {{ with .Hero }}
        <div class="hero">
          <img src="{{ .Src }}" alt="{{ .Alt }}">
        </div>
      {{ end }}

      <div class="rule" aria-hidden="true"></div>
      <nav class="site-nav">
        <a href="/">Home</a> · <a href="/archive/">Post Archive</a> / <a href="/feed.xml">RSS</a> · <a href="/notes/">Notes Archive</a> / <a href="/notes/feed.xml">RSS</a>
      </nav>
       <div class="e-content">
          {{ .ContentHTML }}
       </div>

          <nav class="article-nav">
            {{ if .Prev }}
              Previous: <a class="prev" href="/articles/{{ .Prev.Slug }}/">&larr; {{ .Prev.Title }}</a>
            {{ end }}
            {{ if .Next }}
              </br>
              &nbsp;&nbsp;&nbsp;&nbsp;Next: <a class="next" href="/articles/{{ .Next.Slug }}/">{{ .Next.Title }} &rarr;</a>
            {{ end }}
          </nav>
      
    <article>
      {{- if .Tags }}
      <nav class="tags" aria-label="Tags">
        {{- range .Tags }}
          <a class="tag" href="/tag/{{ .Slug }}/">{{ .Name }}</a>
        {{- end }}
      </nav>
      {{- end }}

      <section id="webmentions" class="webmentions">
        <h3>Mentions</h3>
        <div id="facepile" class="facepile"></div>
      </section>
      <script>
      (function() {
        var url = encodeURIComponent(window.location.href.replace(/\/$/, '') + '/');
        fetch('https://webmention.io/api/mentions.jf2?target=' + url)
          .then(function(r) { return r.json(); })
          .then(function(data) {
            var facepile = document.getElementById('facepile');
            if (!data.children || data.children.length === 0) {
              facepile.innerHTML = '<p class="no-mentions">No mentions yet.</p>';
              return;
            }
            var seen = {};
            data.children.forEach(function(mention) {
              var author = mention.author;
              if (!author || !author.photo || seen[author.url]) return;
              seen[author.url] = true;
              var img = document.createElement('img');
              img.src = author.photo;
              img.alt = author.name || 'Anonymous';
              img.title = author.name || 'Anonymous';
              img.className = 'facepile-avatar';
              if (author.url) {
                var link = document.createElement('a');
                link.href = author.url;
                link.rel = 'nofollow';
                link.appendChild(img);
                facepile.appendChild(link);
              } else {
                facepile.appendChild(img);
              }
            });
          })
          .catch(function() {});
      })();
      </script>

      <footer>
        <a href="/">Home</a> · <a href="/archive/">Post Archive</a> / <a href="/feed.xml">RSS</a> · <a href="/notes/">Notes Archive</a> / <a href="/notes/feed.xml">RSS</a>
      </footer>
    </div>
  </div>
</body>
</html>
