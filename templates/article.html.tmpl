<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{ .Title }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {{- if .CanonicalURL }}<link rel="canonical" href="{{ .CanonicalURL }}">{{ end -}}
  
    <link rel="stylesheet" href="/css/retro-sci-fi.css?v=9">
    <link rel="icon" href="/favicon.ico?v=1" sizes="any">
    <link rel="icon" type="image/png" href="/favicon-32x32.png?v=1" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png?v=1" sizes="16x16">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png?v=1" sizes="180x180">
    <link rel="manifest" href="/site.webmanifest?v=1">
    <meta name="theme-color" content="#0a0e1a">

</head>
<body>
  <div class="wrap">
    <div class="crt">
      <header>
        <h1>{{ .Title }}</h1>
        <p class="byline">By {{ .Author.Name }} · <time datetime="{{ .Date }}">{{ .DateHuman }}</time></p>
      </header>

      {{ with .Hero }}
        <div class="hero">
          <img src="{{ .Src }}" alt="{{ .Alt }}">
        </div>
      {{ end }}

      <div class="rule" aria-hidden="true"></div>
        <article>
      {{ .ContentHTML }}
    <article>
      {{- if .Tags }}
      <nav class="tags" aria-label="Tags">
        {{- range .Tags }}
          <a class="tag" href="/tag/{{ .Slug }}/">{{ .Name }}</a>
        {{- end }}
      </nav>
      {{- end }}

      <footer>
        <a href="/">Home</a> · <a href="/archive/">Archive</a>
      </footer>
    </div>
  </div>
</body>
</html>
